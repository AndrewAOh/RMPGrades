{
  "manifest_version": 3,
  "name": "RMP Grade Helper",
  "description": "View a professor's grade distribution on RateMyProfessor, showing the grades students receive in each class taught by that professor.",
  "version": "1.0.0",
  "action": {
    "default_icon": "images/RMPGradesIconLogo.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "content/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ratemyprofessors.com/professor/*"
      ],
      "css": ["content/content.css"],
      "js": [
        "content/jquery.js",
        "content/content.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.ratemyprofessors.com/professor/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/*",
        "images/*"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}